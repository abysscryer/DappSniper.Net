@using X.PagedList.Mvc.Core;
@using X.PagedList
@model IPagedList<DappSniper.Net.Models.DappViewModel>
@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                LogoPath
            </th>
            <th>
                Category
            </th>
            <th>
                Protocol
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LogoPath)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Category.FromValue(item.Category).Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Protocol.FromValue(item.Protocol).Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    @Html.PagedListPager(Model, pageNumer => Url.Action("Index",
    new
    {
        PageNumber = pageNumer
    }))
</div>